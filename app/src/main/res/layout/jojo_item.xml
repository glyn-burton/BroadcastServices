<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/rvPic"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>


    <TextView
        android:id="@+id/rvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jojo"
        android:textSize="20sp"
        android:layout_marginStart="8dp"
        app:layout_constraintStart_toEndOf="@id/rvPic"
        app:layout_constraintTop_toTopOf="parent"
        />
    <TextView
        android:id="@+id/rvStand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stand"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/rvName"
        app:layout_constraintStart_toEndOf="@id/rvPic"
        />
    <TextView
        android:id="@+id/rvCatchphrase"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Catchphrase"
        android:layout_marginStart="8dp"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/rvStand"
        app:layout_constraintStart_toEndOf="@id/rvPic"
        />

    <TextView
        android:id="@+id/rvPart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Part"
        android:textSize="16sp"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toBottomOf="@id/rvCatchphrase"
        app:layout_constraintStart_toEndOf="@id/rvPic"/>


</androidx.constraintlayout.widget.ConstraintLayout>